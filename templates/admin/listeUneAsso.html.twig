{% extends 'base.html.twig' %}

{% block title %}Liste Asso{% endblock %}

{% block body %}
<center>
    <h1  style="color : #F4B82A ; font-weight : bold">Liste des personnes de l'association : {{nom_asso}}</h1><br><br>
</center>

<table class="table table-striped table-bordered">

    <thead>
        <tr>
            <th>Nom  </th>
            <th>Prénom</th>
            <th> Sexe </th>
            <th> Fonction </th>
            <th> Nombre de tickets envoyés </th>
        </tr>
    </thead>
        {% for l in Asso %}
            <tr>
                <td> {{l.nom}}</td>
                <td> {{l.prenom}}</td>
                <td> {{l.sexe}}</td>
                <td> {{l.fonction}} </td>
                <td> <a href= "http://127.0.0.1:8000/listeTicket/{{rapporteur[l.id]}}" style="color: #0000FF"> {{ tabNbTicket[l.id]}} </td>
            </tr>
        {% endfor %}
    <tbody>

    </tbody>
</table>
    
{% endblock %}