{% extends 'base.html.twig' %}

{% block body %}

<h1> Connexion</h1>
<form action="{{ path('connexion') }} " method="post">
    <div class="form-group">
        <input placeholder="Email" type="text" required name="_username" class="form-control">
    </div>
    <div class="form-group">
        <input placeholder="Mot de passe" type="password" required name="_password" class="form-control">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Connexion</button>
    </div>
</form>

{% endblock %}