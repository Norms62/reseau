{% extends 'base.html.twig' %}

{% block body %}

<h1 style="color : #F4B82A ; font-weight : bold"> Ticket de l'association {{asso}}</h1>
<br><br>
 
<table class="table table-striped table-bordered">

<thead>
    <tr>
        <th style="vertical-align : middle ; border : 1px solid grey" class="text-center"> ID </th>
        <th style="vertical-align : middle ; border : 1px solid grey" class="text-center"> Prestataire </th>
        <th style="vertical-align : middle ; border : 1px solid grey" class="text-center"> Mise a jour  </th>
        {% for c in colonne %}
          <th style="vertical-align : middle ; border : 1px solid grey" class="text-center" scope="col">{{c.COLUMN_NAME}}</th>
        {% endfor %}
    </tr>
</thead>
<tbody> 
    {% for t in tabTicket[asso] %}
    <tr>
        <td style="vertical-align : middle ; border : 1px solid grey" class="text-center"> {{ t.id }} </td>
        <td style="vertical-align : middle ; border : 1px solid grey" class="text-center">
            <a href= "http://127.0.0.1:8000/ticket/{{t.traitement_id}}" style="color: #0000FF"> {{ t.type }} </a></td>
        <td style="vertical-align : middle ; border : 1px solid grey" class="text-center"> {{ t.mise_a_jour|date('d/m/Y') }} </td>
        {% for c in colonne %}
            {% if c.COLUMN_NAME == 'temps'%}
            <td style="vertical-align : middle ; border : 1px solid grey" class="text-center"> {{ (t[c.COLUMN_NAME])|round }} </td>
            {% else %}
            <td style="vertical-align : middle ; border : 1px solid grey" class="text-center">{{t[c.COLUMN_NAME]}}</td>
            {% endif %}
        {% endfor %}
    </tr>
    {% endfor %}
</tbody>
</table> 

{% endblock %}