<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th style="vertical-align : middle;border : 1px solid black" class="text-center"> Associations</th>
            {% for n in nomAsso %}
                <td style="vertical-align : middle;border : 1px solid black" class="text-center">{{n}} </td>
            {% endfor %}
        </tr>
    </thead>
    <tbody>
        <tr>
            <th style="vertical-align : middle;border : 1px solid black" class="text-center"> Nombre de tickets </th>
            {% for n in nomAsso %}
                <td style="vertical-align : middle;border : 1px solid black" class="text-center"> 
                <a href="https://ticketting.reseau-entreprendre.org/index.php/listeTicketParAssoParAnnee/{{n}}/{{date}}" style="color: #0000FF"> {{nbTicket[n]}} </td>
            {% endfor %}
        </tr>
    </tbody>
</table>
