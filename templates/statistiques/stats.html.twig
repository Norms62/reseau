{% extends 'base.html.twig' %}

{% block title %}Statistiques  {% endblock %}

{% block body %}
<h1  style="color : #F4B82A ; font-weight : bold">Statistiques de l'année : {{date}}</h1>
{# Table sur nb et temps des tickets selon le mois #}
{{form_start(form)}}
<label style="font-weight : bold">Filtre par année</label>
<select style="border-color : #59C3B5 ; padding:5px "name="date">
